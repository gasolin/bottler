{
  "name": "expretron",
  "version": "0.2.0",
  "description": "Express.js web server wrapped in Electron desktop runtime for any desktop application",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd app && npm install",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint app/*.js app/routes app/views app/public/js",
    "stylelint": "stylelint app/public/style/**/*.css",
    "clean": "shx rm -Rf build",
    "presetup": "npm run clean && shx cp -r app build && mkdir build/public/vendor",
    "prestart": "npm run setup",
    "start": "node ./start-app.js",
    "start:watch": "watch 'npm run lint && npm start'",
    "setup": "npm run setup:materialize && npm run setup:jquery",
    "setup:materialize": "shx cp -r node_modules/materialize-css/dist build/public/vendor/materialize",
    "presetup:jquery": "shx mkdir build/public/vendor/jquery",
    "setup:jquery": "shx cp node_modules/materialize-css/node_modules/jquery/dist/jquery.min.js build/public/vendor/jquery/jquery.min.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-packager . --out=dist --app-version=$npm_package_version --prune --asar --overwrite --all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gasolin/expretron.git"
  },
  "keywords": [
    "electron",
    "express"
  ],
  "author": "Fred Lin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gasolin/expretron/issues"
  },
  "homepage": "https://github.com/gasolin/expretron#readme",
  "devDependencies": {
    "electron-prebuilt": "^1.0.1",
    "eslint": "^2.9.0",
    "eslint-config-defaults": "^9.0.0",
    "materialize-css": "^0.97.6",
    "shx": "^0.1.2",
    "stylelint": "^6.3.3",
    "stylelint-config-standard": "^7.0.0",
    "watch": "^0.18.0"
  }
}
